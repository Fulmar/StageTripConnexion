<extension version="2.5" type="template" client="site">
	<name>Trip Connexion</name>
	<creationDate>24 Mars 2013</creationDate>
	<author>Fabien Vautour</author>
	<authorEmail>vautour.fabien@gmail.com</authorEmail>
	<authorUrl></authorUrl>
	<copyright>Copyright (C) 2005 - 2013 Open Source Matters, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>2.5.0</version>
	<description>TPL_TPCX_XML_DESCRIPTION</description>

	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>fonts</folder>
		<folder>language</folder>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>error.php</filename>
	</files>

	<positions>
		<position>absolute</position>
		<position>hp-header</position>
		
		<position>slideshow</position>
		
		<position>top</position>
		
		<position>products-before-content</position>
		<position>products-after-content</position>
		
		<position>products-enlarge-bottom-content</position>
		<position>products-enlarge-top-content</position>
		
        <position>content-top</position>
        <position>main-top</position>
        <position>main-bottom</position>
        <position>content-bottom</position>
        <position>banner-title</position>
		<position>banner-title-top</position>
		
		<position>right</position>
		
        <position>bottom</position>
		<position>bottom-various</position>
		
		<position>footer</position>
		
		<position>debug</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="fr-FR">fr-FR/fr-FR.tpl_tpcx.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.tpl_tpcx.sys.ini</language>
	</languages>

	<config>
		
	</config>
</extension>
