<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    version="2.5"
    client="site"
    method="upgrade">
    <name>mod_tpcx_newsletter</name>
    <author>Fabien Vautour</author>
    <creationDate>Mars 2013</creationDate>
    <copyright>Copyright (C) 2005 - 2013 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>vautour.fabien@gmail.com</authorEmail>
    <authorUrl></authorUrl>
    <version>2.5.0</version>
    <description>MOD_TPCX_NEWSLETTER_DESCRIPTION</description>
    <files>
        <filename module="mod_tpcx_newsletter">mod_tpcx_newsletter.php</filename>
        <folder>tmpl</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>mod_tpcx_newsletter.xml</filename>
    </files>
    <languages>
        <language tag="fr-FR">fr-FR.mod_tpcx_newsletter.ini</language>
        <language tag="fr-FR">fr-FR.mod_tpcx_newsletter.sys.ini</language>
    </languages>
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_ARTICLES_NEWSFLASH" />
    <config>
        <fields name="params">
            <fieldset name="basic">
                
                <field
                    name="title"
                    type="text"
                    label="MOD_TPCX_TITLE_LABEL"
                    description="MOD_TPCX_TITLE_DESC" />
                
                <field
                    name="subtitle"
                    type="text"
                    label="MOD_TPCX_SUBTITLE_LABEL"
                    description="MOD_TPCX_SUBTITLE_DESC" />
                
                <field
                    name="labelnews"
                    type="text"
                    label="MOD_TPCX_TITLENEWS_LABEL"
                    description="MOD_TPCX_TITLENEWS_DESC" />
                
                <field
                    name="link-twitter"
                    type="text"
                    label="MOD_TPCX_LINKTWITTER_LABEL"
                    description="MOD_TPCX_LINKTWITTER_DESC" />
                    
                <field
                    name="link-facebook"
                    type="text"
                    label="MOD_TPCX_LINKFACEBOOK_LABEL"
                    description="MOD_TPCX_LINKFACEBOOK_DESC" />
                    
                <field
                    name="link-pinterest"
                    type="text"
                    label="MOD_TPCX_LINKPINTEREST_LABEL"
                    description="MOD_TPCX_LINKPINTEREST_DESC" />
                    
                <field
                    name="link-googleplus"
                    type="text"
                    label="MOD_TPCX_LINKGOOGLEPLUS_LABEL"
                    description="MOD_TPCX_LINKGOOGLEPLUS_DESC" />
				<field
                    name="link-instagram"
                    type="text"
                    label="MOD_TPCX_LINKINSTAGRAM_LABEL"
                    description="MOD_TPCX_LINKINSTAGRAM_DESC" />
                    
            </fieldset>

            <fieldset
                name="advanced">

                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field
                    name="cache"
                    type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                        value="1">JGLOBAL_USE_GLOBAL</option>
                    <option
                        value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                    name="cache_time"
                    type="text"
                    default="900"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

                <field
                    name="cachemode"
                    type="hidden"
                    default="itemid">
                    <option
                        value="itemid"></option>
                </field>

            </fieldset>
        </fields>
    </config>
</extension>
