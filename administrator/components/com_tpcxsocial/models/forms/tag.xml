<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        
        <field
            name="id"
            type="hidden"
        />
        <field
            name="title"
            type="text"
            label="COM_TPCXSOCIAL_TAG_NAME_LABEL"
            description="COM_TPCXSOCIAL_TAG_NAME_DESC"
            size="40"
            class="inputbox"
            default=""
            required="true"
        />
        <field id="published"
            name="published"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="inputbox"
            size="1"
            default="1"
        >
            <option value="1">
                JPUBLISHED</option>
            <option value="0">
                JUNPUBLISHED</option>
            <option value="2">
                JARCHIVED</option>
            <option value="-2">
                JTRASHED</option>

        </field>
        <field name="category_id"
            type="categorytag"
            label="JCATEGORY"
            description="JFIELD_CATEGORY_DESC"
            class="inputbox"
            required="true"
        />   
            
        <field name="created_by" type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="COM_TPCXSOCIAL_FIELD_CREATED_BY_LABEL" />
            
        <field name="created" type="calendar" label="COM_TPCXSOCIAL_FIELD_CREATED_LABEL"
            description="COM_TPCXSOCIAL_FIELD_CREATED_DESC" class="inputbox" size="22"
            format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
        
    </fieldset>
</form>